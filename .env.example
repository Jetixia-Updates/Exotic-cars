# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"
DIRECT_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Cloudinary
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# API (الفرونت يوجّه /api/* إلى هذا العنوان). البورت 3002 لتجنب تعارض مع تطبيقات أخرى على 3001
# لا تعيّن NEXT_PUBLIC_API_URL في التطوير حتى يوجّه الطلبات إلى نفس الجهاز
API_PORT=3002
# NEXT_PUBLIC_API_URL=   # فارغ = استخدام البروكسي إلى http://localhost:3002
NEXT_PUBLIC_WS_URL=ws://localhost:3002

# First admin (optional): create first admin via POST /api/auth/first-admin with body { secret, email, password, name }
# Only works when no ADMIN user exists. After first admin, remove or keep secret for security.
# FIRST_ADMIN_SECRET=your-one-time-secret

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
